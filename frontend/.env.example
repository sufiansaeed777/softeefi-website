# Frontend Environment Variables
# Copy this file to .env.local for development or .env.production for production

# API Configuration
REACT_APP_API_URL=http://localhost:4000
REACT_APP_API_TIMEOUT=30000

# Sentry Error Monitoring (Get your DSN from https://sentry.io)
REACT_APP_SENTRY_DSN=your_sentry_dsn_here
REACT_APP_VERSION=1.0.0

# Google Analytics (Optional)
REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Tawk.to Chat Widget (Optional)
REACT_APP_TAWK_PROPERTY_ID=your_property_id
REACT_APP_TAWK_WIDGET_ID=your_widget_id

# Feature Flags
REACT_APP_ENABLE_AI_CHAT=true
REACT_APP_ENABLE_FREE_REPORTS=true
REACT_APP_ENABLE_ANIMATIONS=true

# Contact Form Settings
REACT_APP_CONTACT_EMAIL=contact@softeefi.com
REACT_APP_MAX_FILE_SIZE=5242880

# Development Settings
REACT_APP_DEBUG_MODE=false
REACT_APP_MOCK_API=false